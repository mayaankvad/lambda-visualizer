{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "dist" ]
}
